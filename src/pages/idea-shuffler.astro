---
import "../styles/global.css";
import IdeaShuffler from "../components/IdeaShuffler.jsx";
const title = "Idea Shuffler â€” stanwood.dev";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta
      name="description"
      content="Browse ideas without ranking them. Random start + circular traversal."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <style>
      body { font-family: 'Inter', system-ui, sans-serif; }
    </style>
  </head>

  <body class="antialiased" style="background: linear-gradient(to bottom, #1a1a2e 0%, #f5f5f5 35%); min-height: 100vh;">
    <main class="mx-auto max-w-2xl px-6 pt-16 pb-24">
      <div class="flex items-center">
        <a
          href="/"
          class="text-sm font-semibold text-white/50 hover:text-white transition-colors"
        >
          &larr; Home
        </a>
      </div>

      <header class="mt-10">
        <h1 class="text-4xl font-extrabold tracking-tight text-white">
          Idea Shuffler
        </h1>
        <p class="mt-2 text-white/60">
          Tap to browse. No ranking, no order.
        </p>
      </header>

      <IdeaShuffler client:load />
    </main>
  </body>
</html>
